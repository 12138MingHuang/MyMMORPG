<log4net>
	<!-- 配置根日志记录器 -->
	<root>
		<!-- 设置日志级别为DEBUG -->
		<level value="DEBUG" />
		<!-- 引用 RollingLogFileAppender -->
		<appender-ref ref="RollingLogFileAppender" />
		<!-- 引用 ColoredConsoleAppender -->
		<appender-ref ref="ColoredConsoleAppender" />
	</root>

	<!-- 定义一个滚动文件附加器，按文件大小滚动 -->
	<appender name="LogFileAppender" type="log4net.Appender.RollingFileAppender">
		<!-- 设置日志文件路径 -->
		<param name="File" value="logs/cmm.log" />
		<!-- 设置为追加模式 -->
		<param name="AppendToFile" value="true" />
		<!-- 设置滚动风格为按大小滚动 -->
		<rollingStyle value="Size" />
		<!-- 设置最大备份文件数 -->
		<maxSizeRollBackups value="10" />
		<!-- 设置最大文件大小 -->
		<maximumFileSize value="1MB" />
		<!-- 设置静态日志文件名 -->
		<staticLogFileName value="true" />
		<!-- 配置日志输出格式 -->
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%date [%02thread] %-5level %logger: %message%newline" />
		</layout>
	</appender>

	<!-- 定义一个滚动文件附加器，按日期滚动 -->
	<appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
		<!-- 设置日志文件目录 -->
		<file value="Log\\" />
		<!-- 设置为追加模式 -->
		<appendToFile value="true" />
		<!-- 设置滚动风格为按日期滚动 -->
		<rollingStyle value="Date" />
		<!-- 设置日期模式的文件后缀 -->
		<datePattern value="yyyyMMdd'.txt'" />
		<!-- 设置动态日志文件名 -->
		<staticLogFileName value="false" />
		<!-- 设置最大备份文件数 -->
		<param name="MaxSizeRollBackups" value="100" />
		<!-- 配置日志输出格式 -->
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%newline%date [%thread] [%-5level] [%logger] ：%message" />
		</layout>
	</appender>

	<!-- 定义一个彩色控制台附加器 -->
	<appender name="ColoredConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
		<!-- 映射错误级别日志为红色 -->
		<mapping>
			<level value="ERROR" />
			<foreColor value="Red, HighIntensity" />
		</mapping>
		<!-- 映射警告级别日志为黄色 -->
		<mapping>
			<level value="Warn" />
			<foreColor value="Yellow,HighIntensity" />
		</mapping>
		<!-- 映射信息级别日志为白色 -->
		<mapping>
			<level value="Info" />
			<foreColor value="White" />
		</mapping>
		<!-- 映射调试级别日志为紫色 -->
		<mapping>
			<level value="Debug" />
			<foreColor value="Purple, HighIntensity" />
		</mapping>
		<!-- 配置日志输出格式 -->
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%date [%thread] %-5level %logger: %message%newline" />
		</layout>
	</appender>
</log4net>
